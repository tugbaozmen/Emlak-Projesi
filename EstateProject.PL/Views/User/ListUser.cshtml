@{
}


@model IEnumerable<EstateProject.Entities.User>

@{
    ViewBag.Title = "ListUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="container" style="margin-left:10px; margin-right:10px;">


    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Güncelle
            </th>
            <th>
                Sil
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName, new { @class = "btnName" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName, new { @class = "btnName" })

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone, new { @class = "btnName" })

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePhone, new { @class = "btnName" })

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName, new { @class = "btnName" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password, new { @class = "btnName" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description, new { @class = "btnName" })
        </td>
        <td>

            @Html.ActionLink("Güncelle", "UpdateUser", new { id = item.UserId }, new { @class = "btn btn-success" })

        </td>
        <td>
            @Html.ActionLink("Sil", "DeleteUser", new { id = item.UserId }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })
        </td>
    </tr>
        }

    </table>


    <br />
    <hr />
    @Html.ActionLink("<< Kullanıcı Ekleme Sayfasına Git >>", "CreateUser")

</div>
@section scripts{
    <script>
        $(".btnDelete").click(function () {
            var productId = $(this).attr("dataproductID");
            $.ajax({
                url: "/User/DeleteProduct/" + productId,
                type: "POST",
                success: function (data) {
                    if (data == "ok") {
                        alert("Silme İşlemi Başarılı");
                        window.location.reload();
                    }
                },
                error: function (err) {
                    alert("Hata Oluştu");
                    console.log(err);
                }
            });
        })
    </script>

}